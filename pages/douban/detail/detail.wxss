.item-header{
   padding: 60rpx 30rpx;
}
.item-header .item-title{
   font-size: 50rpx;
}
.item-header .item-detail{
   display: flex;
   justify-content: space-between;
   margin-top: 20rpx;
}
.item-header .item-detail .left-detail{
  flex: 1;
  margin-right: 20rpx;
}
.item-header .item-detail .left-detail .item-rate{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.item-header .item-detail .left-detail .item-rate .comment-persons{
  font-size: 28rpx;
  color: #ccc;
  margin-left: 20rpx;
}
.item-header .item-detail .right-detail{
  width: 200rpx;
  height: 300rpx;
}
.item-header .item-detail .right-detail image{
  width: 100%;
  height: 100%;
}
.item-header .item-detail .left-detail .item-sub-detail{
  margin-top: 40rpx;
  font-size: 32rpx;
}
.item-header .item-detail .left-detail .item-sub-detail view{
  margin-bottom: 10rpx;
}
.item-tags{
  padding: 0 30rpx;
}
.item-tags .item-tags-title{
  font-size: 32rpx;
  color: #b3b3b3;
  margin-bottom: 20rpx;
}
.item-tags .item-tags-list{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.item-tags .item-tags-list text{
  padding: 10rpx 20rpx;
  font-size: 32rpx;
  background: #f5f5f5;
  color: #353535;
  text-align: center;
  border-radius: 40rpx;
  margin: 0 20rpx 20rpx 0;
}
.comment-list-group{
  padding:0 30rpx;
}
.comment-list-group .comment-title{
  font-size: 32rpx;
  color: "#b3b3b3"
}

.more-comment{
  text-align: center;
  font-size: 36rpx;
  margin-bottom: 40rpx;
   color:#41be57; 
}